
extends layout

block content
	div.well(style="margin:0 auto;width:480px")
		div.movie!= accts.html
		table
			tr
				td タイトル：
				td= accts.title
			tr
				td 詳細：
				td= accts.detail
			tr
				td ジャンル：
				td= accts.genre
		button(onclick='history.back(); return false;').btn.btn-back 戻る

	include modals/alert
	include modals/confirm

block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/views/home.js')
	script(src='/js/controllers/homeController.js')
	script(src='/js/form-validators/accountValidator.js')